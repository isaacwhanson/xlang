<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LLVMSharp" Version="5.0.0" />
  </ItemGroup>

  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.targets" />

  <PropertyGroup>
    <PreBuildEvent>dotnet $(ProjectDir)../coco/bin/Debug/netcoreapp2.0/coco.dll $(ProjectDir)xlang.atg -frames $(ProjectDir)../coco/ -o $(ProjectDir) -namespace xlang</PreBuildEvent>
  </PropertyGroup>

</Project>
